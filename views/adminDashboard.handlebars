    <style>
        #votecount .profile-card-2 {
            max-width: 300px;
            background-color: #393e46;
            box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.1);
            background-position: center;
            overflow: hidden;
            position: relative;
            margin: 5px auto;
            cursor: pointer;
            border-radius: 10px;
        }

        #votecount .profile-card-2 img {
            transition: all linear 0.25s;
        }

        #votecount .profile-card-2 .profile-name {
            position: absolute;
            left: 30px;
            bottom: 70px;
            font-size: 30px;
            color: #FFF;
            text-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
            font-weight: bold;
            transition: all linear 0.25s;
        }

        #votecount .profile-card-2 .profile-icons {
            position: absolute;
            bottom: 30px;
            right: 30px;
            color: #FFF;
            transition: all linear 0.25s;
        }

        #votecount .profile-card-2 .profile-username {
            position: absolute;
            bottom: 50px;
            left: 30px;
            color: #FFF;
            font-size: 13px;
            transition: all linear 0.25s;
        }

        #votecount .profile-card-2 .profile-icons .fa {
            margin: 5px;
        }

        #votecount .profile-card-2:hover img {
            filter: grayscale(100%);
        }

        #votecount .profile-card-2:hover .profile-name {
            bottom: 80px;
        }

        #votecount .profile-card-2:hover .profile-username {
            bottom: 60px;
        }

        #votecount .profile-card-2:hover .profile-icons {
            right: 40px;
        }
    </style>
</head>


